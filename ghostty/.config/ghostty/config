# Move the file colorscheme file to where ghostty pulls the colorschemes from
theme="Tomorrow Night Custom"

# splits
unfocused-split-opacity = 0.85
keybind = alt+shift+]=goto_split:next
keybind = alt+shift+[=goto_split:previous


keybind = alt+shift+p=new_split:right
keybind = alt+shift+o=new_split:down
keybind = alt+shift+w=close_surface



# window properties
window-theme=ghostty
window-inherit-working-directory=true
# macos-titlebar-proxy-icon = hidden
window-padding-x = 4,4
window-padding-y = 4,4

# font
font-family = "JetBrains Mono Bold"
font-family-bold = "JetBrains Mono ExtraBold"
font-family-italic = "JetBrains Mono Bold Italic"
font-family-bold-italic = "JetBrains Mono ExtraBold Italic"
font-size = 16
font-feature = -calt
