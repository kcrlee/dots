theme="Tomorrow Night Custom"
# splits
unfocused-split-opacity = 0.85
keybind = alt+shift+]=goto_split:next
keybind = alt+shift+[=goto_split:previous
keybind = alt+shift+p=new_split:right
keybind = alt+shift+o=new_split:down
keybind = alt+shift+w=close_surface

# window properties
window-theme = ghostty
window-inherit-working-directory = true
window-padding-x = 20
window-padding-y = 20
# macos-titlebar-proxy-icon = hidden

# shell
mouse-hide-while-typing = true

# ensure TX-02 is used 
font-family = "TX-02-Variable"
font-family-bold = "TX-02-Variable"
font-family-italic = "TX-02-Variable"


# weight (font-style using named style syntax)
# 400 Regular
# 425 Book
# 500 Medium
# 600 SemiBold
# 700 Bold

# alternate syntax
# Font slant (0 to -16)
#   0 = Regular
# -16 = Oblique
# font-variation = slnt=0
# font-variation = wght=425


font-style = Regular
font-style-bold = SemiBold
font-style-italic = Oblique
font-style-bold-italic = SemiBold Oblique
font-size = 16

# bright works because of thicken
font-thicken=true
bold-color = bright 

# ligatures
font-feature = -calt 
font-feature = -liga

# contrast

minimum-contrast = 1.1


# Cell
adjust-cell-height= 20%
adjust-cell-width= -4%
