# Move the file colorscheme file to where ghostty pulls the colorschemes from
theme="Tomorrow Night Custom"

# splits
unfocused-split-opacity = 0.85
keybind = alt+shift+]=goto_split:next
keybind = alt+shift+[=goto_split:previous


keybind = alt+shift+p=new_split:right
keybind = alt+shift+o=new_split:down
keybind = alt+shift+w=close_surface



# window properties
window-theme=ghostty
window-inherit-working-directory=true
# macos-titlebar-proxy-icon = hidden
window-padding-x = 4,4
window-padding-y = 4,4

font-family = TX-02-Variable

# Font width (60 to 100)
#  60 = UltraCondensed
#  70 = ExtraCondensed
#  80 = Condensed
#  90 = SemiCondensed
# 100 = Normal
font-variation = wdth=90

# Font weight (100 to 900)
# 100 = Thin
# 200 = ExtraLight
# 300 = Light
# 350 = SemiLight
# 400 = Regular
# 500 = Medium
# 600 = SemiBold
# 700 = Bold
# 800 = ExtraBold
# 900 = Black
font-variation = wght=600

# Font slant (0 to -16)
#   0 = Regular
# -16 = Oblique
font-variation = slnt=0

# otfinfo -f ~/.local/share/fonts/Berkeley\ Mono\ Variable.otf
# aalt    Access All Alternates
# calt    Contextual Alternates
# ccmp    Glyph Composition/Decomposition
# mark    Mark Positioning
# mkmk    Mark to Mark Positioning
# salt    Stylistic Alternates
# ss01    Stylistic Set 1 <- slashed 0
# ss02    Stylistic Set 2 <- dotted 0
# ss03    Stylistic Set 3 <- gap 0
# ss04    Stylistic Set 4 <- slashed 0, slash 7
# ss05    Stylistic Set 5 <- dotted 0, slash 7
# ss06    Stylistic Set 6 <- gap 0, slash 7
font-feature = +calt
font-feature = +ss05

font-size = 18
# Personal preference
# adjust-cell-height = -2%
